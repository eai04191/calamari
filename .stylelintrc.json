{
    "extends": ["stylelint-config-recommended", "stylelint-config-css-modules"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extends", "tailwind"]
            }
        ],
        "block-no-empty": null,
        "unit-whitelist": ["em", "rem", "s"]
    }
}
